<h1>Wikis</h1>

<div class="row">
  <div class="span8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.name, wiki %>
          </h4>
          <small>
            <%= wiki.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span4">
    <% if can? :create, Wiki %>
      <%= link_to "New wiki", new_wiki_path, class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>